{
	"compilerOptions": {
        "baseUrl": ".",
        "paths": { "*": ["types/*"] },
		"types": [
			"mocha",
			"node"
		],
		"target": "es6",
		"module": "commonjs",
		"outDir": "dist",
		"sourceMap": true
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"test"
	],
	"resolveJsonModule": true,
	"allowSyntheticDefaultImports": true,
	"esModuleInterop": true
}